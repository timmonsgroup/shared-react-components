{
    "compilerOptions": {
        "jsx": "react-jsx", /* Specify what JSX code is generated. */
        "target": "es5",
        "module": "NodeNext",
        "noImplicitAny": false,
        "removeComments": false,
        "declaration": true,
        "noLib": false,
        "sourceMap": true,
        "allowJs": true,
        "emitDeclarationOnly": true,
        "outDir": "build/ts/",
        "declarationDir": "build/",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": false,
        "rootDir": "./src",
        "allowImportingTsExtensions": true,
        "moduleResolution": "NodeNext"
    },
    "exclude": [
        "tests",
        "node_modules",
        "*/node_modules",
        "*/**/node_modules",
        "build",
    ],
    "include": [
        "src/**/*"
    ],
    "buildOptions": {
        "outDir": "./build",
        "declaration": true,
        "declarationMap": true,
        "allowJs": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./build",
        "moduleResolution": "nodenext",
    },
    "compileOnSave": true,
    "typeAcquisition": {
        "enable": true
    }
}